{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server",
      "program": "${forumdiscussionapp}/backend/server.js",
      "runtimeExecutable": "npm",
      "runtimeArgs": [ "run", "start:server"],
      "restart": true,
      "outputCapture": "std",
      "timeout": 60000,
      "stopOnEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bListening on port 8081\\b",
        "uriFormat": "http://localhost:8081"
      },
    },
    {
      "name": "Launch Client",
      "type": "chrome",
      "request": "launch",
      "cwd": "${forumdiscussionapp}/client",
      "runtimeExecutable": "npm",
      "runtimeArgs": [ "run", "start:client"],
      "url": "http://localhost:3000",
      "webRoot": "${forumdiscussionapp}/client",
      "sourceMaps": true,
      "userDataDir": "${forumdiscussionapp}/client/.vscode/chrome"
    }      
  ],
  "compounds": [
    {
      "name": "Launch Server and Client",
      "configurations": ["Launch Server", "Launch Client"]
    }
  ]
}
